<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_goodsinfo_cart_img"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:src="@drawable/a3"/>
    <TextView
        android:id="@+id/item_goodsinfo_cart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dameinv"
        app:layout_constraintLeft_toRightOf="@id/item_goodsinfo_cart_img"
        android:layout_margin="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/item_goodsinfo_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250快"
        android:textColor="@color/main_red"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toRightOf="@id/item_goodsinfo_cart_img"
        app:layout_constraintTop_toBottomOf="@id/item_goodsinfo_cart_name"
        />

    <TextView
        android:id="@+id/item_goodsinfo_cart_ks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="款式"
        app:layout_constraintTop_toBottomOf="@id/item_goodsinfo_cart_img"
        android:layout_marginLeft="5dp"
        />

    <RadioGroup
        android:id="@+id/item_goodsinfo_cart_radiogroup"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/item_goodsinfo_cart_ks">

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="M"
            android:textColor="@drawable/item_goodsinfo_size"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="L"
            android:textColor="@drawable/item_goodsinfo_size"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="XL"
            android:textColor="@drawable/item_goodsinfo_size"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <TextView
        android:id="@+id/item_goodsinfo_cart_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/item_goodsinfo_cart_radiogroup"/>

    <ImageView
        android:id="@+id/item_goodsinfo_cart_sub_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goods_sub_btn"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_goodsinfo_cart_radiogroup"
        app:layout_constraintLeft_toRightOf="@id/item_goodsinfo_cart_number"
        />

    <TextView
        android:id="@+id/item_goodsinfo_cart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_goodsinfo_cart_radiogroup"
        app:layout_constraintLeft_toRightOf="@id/item_goodsinfo_cart_sub_btn"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:text="1"/>

    <ImageView
        android:id="@+id/item_goodsinfo_cart_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goods_add_btn"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/item_goodsinfo_cart_radiogroup"
        app:layout_constraintLeft_toRightOf="@id/item_goodsinfo_cart_count"
        android:layout_marginLeft="10dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/item_goodsinfo_cart_over"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#000000"
        android:background="@color/main_gray"
        android:padding="10dp"
        android:textSize="19dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/item_goodsinfo_cart_commit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="确认"
        android:background="@color/main_red"
        android:textColor="@color/main_write"
        android:gravity="center"
        android:textSize="19dp"
        android:padding="10dp"
        android:layout_weight="1"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>