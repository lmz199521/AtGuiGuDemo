<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.sendGoods.SendGoodsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#E5E4DC"
        android:id="@+id/sendgoods_layout">
        <ImageView
            android:id="@+id/sendgoods_back"
            android:layout_gravity="center_vertical"
            android:src="@drawable/top_bar_left_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="代发货"
            android:textSize="@dimen/textSize"
            android:textStyle="bold"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/sendgoods_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/sendgoods_viewpager"></android.support.v4.view.ViewPager>


</android.support.constraint.ConstraintLayout>