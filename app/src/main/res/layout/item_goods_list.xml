<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#FBFFFA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_goods_list_pic"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/item_goods_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdsadsad"
        app:layout_constraintTop_toBottomOf="@id/item_goods_list_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="16sp"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/item_goods_list_price"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/item_goods_list_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="10dp"
        android:padding="5dp"
        android:textColor="@color/main_red"
        android:text="asdasdsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>