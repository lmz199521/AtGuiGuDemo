<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_radiogroup"></FrameLayout>

    <RadioGroup
        android:id="@+id/main_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipChildren="false"
        android:background="@drawable/home_bottom_parent_bg"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/main_radiobtn_home"
            android:layout_width="0dp"
            android:drawableTop="@drawable/home_selector"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="首页"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/main_radiobtn_type"
            android:layout_width="0dp"
            android:drawableTop="@drawable/type_selector"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分类"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/main_radiobtn_community"
            android:layout_width="0dp"
            android:drawableTop="@drawable/community_selector"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发现"
            android:textSize="19dp"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/main_radiobtn_cart"
            android:layout_width="0dp"
            android:drawableTop="@drawable/cart_selector"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购物车"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/main_radiobtn_user"
            android:layout_width="0dp"
            android:drawableTop="@drawable/user_selector"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="个人中心"
            android:gravity="center"
            android:button="@null"/>

    </RadioGroup>

</android.support.constraint.ConstraintLayout>